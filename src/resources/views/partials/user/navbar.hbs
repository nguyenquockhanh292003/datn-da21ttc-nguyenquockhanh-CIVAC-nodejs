<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Lấy danh sách các mục menu
    const menuItems = document.querySelectorAll(".main-nav li");

    // Lấy đường dẫn hiện tại (pathname) của URL
    const currentPath = window.location.pathname;

    // Duyệt qua từng mục menu
    menuItems.forEach((item) => {
      const link = item.querySelector("a");
      const linkPath = link.getAttribute("href");

      // Xóa lớp active khỏi tất cả các mục
      item.classList.remove("active");

      // So sánh pathname với href
      if (currentPath === linkPath || (currentPath === "/" && linkPath === "/home")) {
        item.classList.add("active");
      }
    });
  });
</script>